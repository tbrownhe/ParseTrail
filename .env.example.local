PROJECT_NAME=ParseTrail
STACK_NAME=parsetrail
GITHUB_URL="https://github.com/tbrownhe/parsetrail"

# Environment: local, staging, production
ENVIRONMENT=local

# Host networking
SERVER_LAN_IP=changethis

# Routing
DOMAIN=localhost
BACKEND_HOST="http://${DOMAIN}:8000/api/v1"

# CORS / frontend URLs
BACKEND_CORS_ORIGINS="http://${DOMAIN},http://${DOMAIN}:5173,http://${DOMAIN}:8080"
FRONTEND_HOST="http://${DOMAIN}:8080"

# Traefik Config (not needed for local)
# Generate hash with: htpasswd -nb admin TRAEFIK_PW
TRAEFIK_USER=changethis
TRAEFIK_HASH=changethis

# Traefik TLS certificate auth (not needed for local)
EMAIL=changethis

# SwaggerUI basic-auth hash
# Generate hash with: htpasswd -nb admin SWAGGER_PW
SWAGGER_HASH=changethis

# Backend auth / seed admin
SECRET_KEY=changethis
FIRST_SUPERUSER=changethis
FIRST_SUPERUSER_PASSWORD=changethis
SENTRY_DSN=

# SMTP
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis

# Docker images
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend

# Docker group id (getent group docker | cut -d: -f3)
DOCKER_GID=changethis

# Statements encryption and storage
MASTER_KEY=changethis
STATEMENTS_DIR=changethis

# Statements file owner/group (id -u / id -g)
STATEMENTS_FILE_OWNER=changethis
STATEMENTS_FILE_GROUP=changethis

# Client build env
CLIENT_CONDA_ENV=parsetrail-client

# Local build outputs
CLIENTS_DIR=changethis
PLUGINS_DIR=changethis
MODELS_DIR=changethis

# Remote targets (for local dev against remote)

# SSH target
REMOTE_HOST=changethis
REMOTE_USER=changethis

# SSH key (optional)
SSH_KEY_PATH=

# SSH tunnel for DB
SSH_TUNNEL_ENABLE=true
SSH_TUNNEL_LOCAL_PORT=55432
DB_CONTAINER_NAME=changethis
DB_CONTAINER_PORT=5432

# Remote resource paths
REMOTE_ENV_PATH=changethis
REMOTE_CLIENTS_DIR=changethis
REMOTE_PLUGINS_DIR=changethis
REMOTE_MODELS_DIR=changethis
REMOTE_STATEMENTS_DIR=changethis
